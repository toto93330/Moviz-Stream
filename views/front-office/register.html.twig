       {% extends "base.html.twig" %}

       {% block content %}
       <section class="sign-in-page">
          <div class="container">
             <div class="row justify-content-center align-items-center height-self-center">
                <div class="col-lg-5 col-md-12 align-self-center">
                   <div class="sign-user_card ">
                      <div class="sign-in-page-data">
                         <div class="sign-in-from w-100 m-auto">
                            <h3 class="mb-3 text-center">Sign Up</h3>
                            <form class="mt-4"
                               aaction="/register" method="POST">
                               <div class="form-group">
                                  <input type="text" class="form-control mb-0" 
                                     placeholder="Firstname" name="firstname" autocomplete="off" required>
                               </div>
                                <div class="form-group">
                                  <input type="text" class="form-control mb-0" 
                                     placeholder="Lastname" name="lastname" autocomplete="off" required>
                               </div>
                               <div class="form-group">
                                  <input type="email" class="form-control mb-0" 
                                     placeholder="Enter email" autocomplete="off" name="email" required>
                               </div>
                               <div class="form-group">
                                  <input type="password" class="form-control mb-0"
                                     placeholder="password" autocomplete="off" name="password" required>
                               </div>
                               <div class="form-group">
                                  <input type="password" class="form-control mb-0" name="retry-password"
                                     placeholder="Password" required>
                               </div>
                                <div class="mb-3">
                                    <center><img class="p-3" src="Captcha.php" alt="captcha"></center>
                                    <input type="text" class="form-control" id="captcha" name="captcha" placeholder="Enter captcha" required>
                              </div>
                               <div class="custom-control custom-checkbox mb-3">
                                  <input type="checkbox" class="custom-control-input" id="customCheck" name="terms-accepted">
                                  <label class="custom-control-label" for="customCheck">I accept <a href="/pages/terms-and-conditions"
                                        class="text-primary"> Terms and Conditions</a></label>
                               </div>

                               <button type="submit" class="btn btn-hover">Sign Up</button>

                            </form>
                            
                            {% if session.ERROR is not null %}
                            <p class="text-danger text-center pt-2">{{session.ERROR}}</p>
                            {% endif %}

                            {% if session.SUCCESS is not null %}
                            <p class="text-success text-center pt-2">{{session.SUCCESS}}</p>
                            {% endif %}
                         </div>
                      </div>
                      <div class="mt-3">
                         <div class="d-flex justify-content-center links">
                            Already have an account? <a href="login.html" class="text-primary ml-2">Sign In</a>
                         </div>
                      </div>
                   </div>
                </div>
             </div>
          </div>
       </section>
       {% endblock %}