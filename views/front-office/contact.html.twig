      {% extends "base.html.twig" %}

      {% block content %}
<section class="m-profile">
    <div class="container">
        <h1>{{constant('_CONTACTUS')}}</h1>
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <form method="post" action="/contact">
                    <div class="mb-3">
                        <label for="emailadresse" class="form-label">{{constant('_EMAILADRESS')}}</label>
                        <input type="email" class="form-control" id="emailadresse" aria-describedby="emailHelp" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="subject" class="form-label">{{constant('_MESSAGESUBJECT')}}</label>
                        <select class="form-select" aria-label="Default select example" name="select">
                            <option selected>{{constant('_SELECTASUBJECT')}}</option>
                            <option value="Remove content">{{constant('_REMOVECONTENT')}}</option>
                            <option value="Problem with site">{{constant('_PROBLEMEWITHSITE')}}</option>
                            <option value="Video request">{{constant('_VIDEOREQUEST')}}</option>
                            <option value="other">{{constant('_OTHER')}}</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="content" class="form-label">{{constant('_MESSAGECONTENT')}}</label>
                        <textarea class="form-control" id="content" rows="3" style="height: 256px;" name="content" required></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="captcha" class="form-label">Captcha</label>
                        <center><img class="p-3" src="Captcha.php" alt="captcha"></center>
                        <input type="text" class="form-control" id="captcha" name="captcha" required>
                    </div>
                    <button type="submit" class="btn btn-outline-danger">{{constant('_SUBMIT')}}</button>
                </form>
                            {% if session.ERROR is not null %}
                            <p class="text-danger text-center pt-2">{{session.ERROR}}</p>
                            {% endif %}

                            {% if session.SUCCESS is not null %}
                            <p class="text-success text-center pt-2">{{session.SUCCESS}}</p>
                            {% endif %}
            </div>
        </div>
    </div>
</section>
{% endblock %}